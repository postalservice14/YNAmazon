# ===== Amazon Configuration =====
# Choose ONE of the following approaches:

# Option 1: Single Account Setup (Legacy - still supported)
# Leave these empty if using multi-account setup below
amazon_user=
amazon_password=

# Option 2: Multi-Account Setup (Recommended for households with multiple accounts)
# If using this approach, leave the single account fields above empty
# The system will automatically detect and use all numbered accounts (1, 2, 3, etc.)
# Uncomment and fill in as many accounts as you need:
# amazon_user_1=your.email@example.com
# amazon_password_1=your_password_1
# amazon_user_2=spouse.email@example.com
# amazon_password_2=your_password_2

# ===== YNAB Configuration =====
ynab_api_key=
ynab_budget_id=
ynab_payee_name_to_be_processed=
ynab_payee_name_processing_completed=

# ===== Optional Features =====
# Enable markdown formatting in YNAB memos (requires YNAB Toolkit browser extension)
ynab_use_markdown=false

# Enable AI-powered memo summarization (requires OpenAI API key)
use_ai_summarization=false
openai_api_key=
